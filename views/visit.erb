<h2>Entry</h2>

<form action="/visit" method="POST" role="form">

  <div class="form-group">
    <label>Your name</label>
    <input id="name" type="text" name="userName" class="form-control" placeholder="Enter your name">
  </div>

  <div class="form-group">
    <label>Your phone</label>
    <input type="text" name="userPhone" class="form-control newFon" placeholder="Enter your phone">
  </div>

  <div class="form-group">
    <label>Recording: date and time</label>
    <input id="recording" type="text" name="dataTime" class="form-control" placeholder="Enter date and time">
  </div>

  <div>
  <label>Choice of Barber</label>
  <select class="form-control" name="selectBarber">
    <option>No matter</option>
    <option>Walter White</option>
    <option>Jessie Pinkman</option>
    <option>Gus Fring</option>
  </select>
  </div> <br />

  <div>
    <label>Choose color for painting</label>  <br />
    <select id="color" name="colorVisitor">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Sing up</button>

</form>

<script type="text/javascript">
  $('#color').simplecolorpicker();
</script>